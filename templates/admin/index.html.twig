{% extends "base.html.twig" %}
{% block body %}
<section class="container mt-4">
    <div class="container mt-4">
        <div class="comp-affiche">
            <h1>Affichage compétences</h1>
                <table>
                    <thead>
                        <th>Id</th>
                        <th>titre</th>
                        <th>realisation</th>
                        <th>periodeDebut</th>
                        <th>periodeFin</th>
                        <th>valide</th>
                        <th>categorie</th>
                    </thead>
                    <tbody>
                        {% for competence in competences %}
                            <tr>
                                <td>{{ competence.id }}</td>
                                <td>{{ competence.titre }}</td>
                                <td>{{ competence.realisation }}</td>
                                <td>{{ competence.periode|date("m/d/Y") }}</td>
                                <td>{{ competence.periodeFin|date("m/d/Y") }}</td>
                                <td>{{ competence.valide }}</td>
                                <td>{{ competence.categorie.titre }}</td>
                            </tr>
                            

                    {% endfor %}
                </tbody>
            </table>
             <button class="btn btn-primary btn-inline mt-2"><a href={{path('admin.competence.liste')}}> liste compétence </a></button>
        </div>
    </div>
</section>
{% endblock %}
